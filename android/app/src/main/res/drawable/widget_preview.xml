<?xml version="1.0" encoding="utf-8"?>
<!-- Widget preview image for Android 8-11 compatibility -->
<!-- This preview is used on devices running API 26-30 -->
<!-- For API 31+, the previewLayout attribute in myself_widget_info.xml is used instead -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners and translucent fill -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#D9F5F5F0" />
            <stroke
                android:width="1dp"
                android:color="#1A1E1E22" />
        </shape>
    </item>

    <!-- Simple heart icon in center (represents affirmation content) -->
    <item
        android:gravity="center"
        android:width="48dp"
        android:height="48dp">
        <shape android:shape="oval">
            <solid android:color="#FF90A69C" />
        </shape>
    </item>
</layer-list>
