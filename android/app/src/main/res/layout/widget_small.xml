<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_container"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Empty state icon -->
        <ImageView
            android:id="@+id/empty_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sparkles"
            android:visibility="gone"
            android:contentDescription="@string/widget_empty_icon_description" />

        <!-- Affirmation text -->
        <TextView
            android:id="@+id/affirmation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_placeholder_text"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:maxLines="5"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center" />

        <!-- Empty state text -->
        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_tap_to_create"
            android:textSize="11sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:textAlignment="center" />
    </LinearLayout>
</FrameLayout>
